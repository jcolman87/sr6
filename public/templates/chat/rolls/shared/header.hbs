<a class="click-actor" data-actor-id="{{actor.uuid}}">
<h3>
	{{#unless (undefined actor)}}
	<img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="24" width="24" />
	{{/unless}}
{{#unless (undefined actor)}}
<div width="100%">{{actor.name}}<span style="font-size: 16px; float: right">{{ title }}</span></div>
{{/unless}}
</h3>
</a>
<header class="part-header flexrow chat-expand-dice">
	<div id="formula">{{roll.formula}}</div>
	<br/>
	<div class="resulttext" style="flex:2">
		<i id="hits" style="font-weight: bold">{{roll.hits}}</i> hits</div>

	<br/>
	{{#if roll.is_critical_glitch}}
	<span class="critical-glitch">Critical Glitch!</span><br/>
	{{else roll.is_glitch}}
	<span class="glitch">Glitch!</span><br/>
	{{/if}}
</header>
<hr/>
